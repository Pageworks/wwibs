{
    "name": "wwibs",
    "version": "0.2.0",
    "description": "A performance-focused Web Worker Based Broadcasting System",
    "main": "wwibs.js",
    "files": [
        "lib/broadcaster.js",
        "lib/broadcaster.d.ts",
        "lib/utils.js",
        "lib/utils.d.ts",
        "wwibs.js",
        "wwibs.d.ts",
        "wwibs-worker.min.js",
        "types.d.ts",
        "wwibs.min.js",
        "wwibs.min.mjs"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Pageworks/wwibs.git"
    },
    "keywords": [
        "web-worker",
        "actor-model",
        "messaging",
        "state-management"
    ],
    "author": "Pageworks",
    "license": "GPL-3.0",
    "bugs": {
        "url": "https://github.com/Pageworks/wwibs/issues"
    },
    "homepage": "https://github.com/Pageworks/wwibs#readme",
    "devDependencies": {
        "@codewithkyle/dev-docs": "^0.1.14",
        "@typescript-eslint/eslint-plugin": "^2.34.0",
        "@typescript-eslint/parser": "^2.34.0",
        "esbuild": "^0.8.53",
        "eslint": "^6.8.0",
        "eslint-config-prettier": "^6.15.0",
        "eslint-plugin-prettier": "^3.3.1",
        "gh-pages": "^3.1.0",
        "prettier": "^1.19.1",
        "terser": "^4.8.0",
        "typescript": "^4.2.2"
    },
    "scripts": {
        "prettier": "prettier --write \"src/**/*.ts\"",
        "eslint": "eslint -c .eslintrc.js src/**/*.ts",
        "lint": "npm run prettier && npm run eslint",
        "cleanup": "node ./build/cleanup.js",
        "compile": "npm run cleanup && tsc",
        "prerelease": "npm run lint && npm run compile && node ./build/prerelease.js && npm run bundle",
        "docs": "docs",
        "predeploy": "docs -o ./public -c ./CNAME",
        "deploy": "node ./build/deploy.js",
        "bundle": "esbuild ./wwibs.js --bundle --outfile=wwibs.min.js --format=iife --minify && esbuild ./wwibs.js --bundle --outfile=wwibs.min.mjs --format=esm --minify"
    },
    "devDocs": {
        "name": "WWIBS",
        "links": [
            {
                "label": "GitHub",
                "url": "https://github.com/Pageworks/wwibs"
            },
            {
                "label": "NPM",
                "url": "https://www.npmjs.com/package/wwibs"
            }
        ]
    }
}
